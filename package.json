{
  "name": "@ygkit/2fa",
  "version": "0.0.4",
  "description": "CLI Command for Two Factor Authentication",
  "author": "yugasun",
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "license": "MIT",
  "exports": "./dist/src/index.js",
  "bin": {
    "2fa": "bin/2fa.js"
  },
  "scripts": {
    "dev": "ts-node ./src/index.ts",
    "start": "node ./bin/2fa.js",
    "test": "jest",
    "build": "tsc",
    "format": "npm run lint && npm run prettier",
    "commitlint": "commitlint -f HEAD@{15}",
    "lint": "eslint --ext .js,.ts,.tsx .",
    "lint:fix": "eslint --fix --ext .js,.ts,.tsx .",
    "prettier": "prettier --check '**/*.{css,html,js,ts,json,md,yaml,yml}'",
    "prettier:fix": "prettier --write '**/*.{css,html,js,ts,json,md,yaml,yml}'",
    "release": "semantic-release",
    "release-local": "node -r dotenv/config node_modules/semantic-release/bin/semantic-release --no-ci",
    "check-dependencies": "npx npm-check --skip-unused --update"
  },
  "dependencies": {
    "@types/inquirer": "^8.2.9",
    "@types/js-yaml": "^4.0.8",
    "chalk": "^4.1.2",
    "clipboardy": "^2.3.0",
    "commander": "^9.5.0",
    "inquirer": "^8.2.6",
    "inquirer-search-list": "^1.2.6",
    "js-yaml": "^4.1.0",
    "otplib": "^12.0.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^12.1.4",
    "@commitlint/config-conventional": "^12.1.4",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/commit-analyzer": "^9.0.2",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/npm": "^9.0.2",
    "@semantic-release/release-notes-generator": "^10.0.3",
    "@types/jest": "^26.0.24",
    "@types/node": "^17.0.45",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^5.62.0",
    "dotenv": "^16.3.1",
    "eslint": "^8.52.0",
    "eslint-config-prettier": "^8.10.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^6.0.0",
    "jest": "^27.5.1",
    "lint-staged": "^11.2.6",
    "prettier": "^2.8.8",
    "semantic-release": "^19.0.5",
    "ts-jest": "^27.1.5",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.5",
    "typescript-json-schema": "^0.50.1"
  },
  "engines": {
    "node": ">=12.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-push": "npm run lint:fix && npm run prettier:fix"
    }
  },
  "lint-staged": {
    "**/*.{js,ts,tsx}": [
      "npm run lint:fix"
    ],
    "**/*.{css,html,js,ts,json,md,yaml,yml}": [
      "npm run prettier:fix"
    ]
  },
  "keywords": [
    "2fa",
    "Two Factor Authentication",
    "CLI"
  ]
}
